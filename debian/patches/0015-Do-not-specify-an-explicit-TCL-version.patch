From: "Igor B. Poretsky" <poretsky@rakurs.com>
Date: Wed, 23 Nov 2022 09:26:38 +0300
Subject: Do not specify an explicit TCL version

---
 servers/linux-outloud/Makefile | 3 ++-
 servers/native-espeak/Makefile | 3 ++-
 2 files changed, 4 insertions(+), 2 deletions(-)

diff --git a/servers/linux-outloud/Makefile b/servers/linux-outloud/Makefile
index 440c83e..093c419 100644
--- a/servers/linux-outloud/Makefile
+++ b/servers/linux-outloud/Makefile
@@ -6,7 +6,8 @@ PREFIX = /usr
 LIBPARENTDIR = ${PREFIX}/share/emacs/site-lisp
 LIBDIR =$(LIBPARENTDIR)/emacspeak/servers/linux-outloud
 
-TCL_VERSION=8.6
+#TCL_VERSION=8.6
+TCL_VERSION=
 TCL_INCLUDE=/usr/include/tcl$(TCL_VERSION)
 CFLAGS+= -g    -O4 -fPIC  -DPIC  -pedantic -ansi -Wall  -Wno-long-long -I$(TCL_INCLUDE)
 #CFLAGS+= -m32 -g    -O2 -fPIC  -DPIC  -pedantic -ansi -Wall  -Wno-long-long -I$(TCL_INCLUDE)
diff --git a/servers/native-espeak/Makefile b/servers/native-espeak/Makefile
index ce889b4..a7d97e7 100644
--- a/servers/native-espeak/Makefile
+++ b/servers/native-espeak/Makefile
@@ -13,7 +13,8 @@ ifeq ($(shell uname -s), Darwin)
   LIBS= -framework tcl -lespeak-ng
   TTS=tclespeak.dylib
 else
-  TCL_VERSION = 8.6
+  #TCL_VERSION = 8.6
+  TCL_VERSION = 
   TCL_INCLUDE= /usr/include/tcl$(TCL_VERSION)
   LIBS= -ltcl$(TCL_VERSION) -lespeak
   TTS=tclespeak.so
