From: "Igor B. Poretsky" <poretsky@mlbox.ru>
Date: Tue, 8 Nov 2022 15:38:23 +0300
Subject: Use 3d theme for hardcoded sounds

---
 bash-utils/prompt        | 2 +-
 lisp/emacspeak-sounds.el | 2 +-
 stumpwm/stumpwmrc        | 6 +++---
 3 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/bash-utils/prompt b/bash-utils/prompt
index 6e67dd8..a97a74a 100644
--- a/bash-utils/prompt
+++ b/bash-utils/prompt
@@ -1,5 +1,5 @@
 # Set up prompts for bash: -*- mode: sh -*-
-SOUNDDIR=${EMACSPEAK_DIR}/sounds/pan-chimes
+SOUNDDIR=${EMACSPEAK_DIR}/sounds/3d
 EBASH=${EMACSPEAK_DIR}/bash-utils
 SUCCESS=$SOUNDDIR/item.wav
 FAIL=$SOUNDDIR/warn-user.wav
diff --git a/lisp/emacspeak-sounds.el b/lisp/emacspeak-sounds.el
index 093556c..ccacef3 100644
--- a/lisp/emacspeak-sounds.el
+++ b/lisp/emacspeak-sounds.el
@@ -96,7 +96,7 @@ use `emacspeak-toggle-auditory-icons' bound to
 
 (defvar emacspeak-default-sound
   (expand-file-name
-   "classic/button.wav"
+   "3d/button.wav"
    emacspeak-sounds-directory)
   "Default sound to play if requested icon not found.")
 
diff --git a/stumpwm/stumpwmrc b/stumpwm/stumpwmrc
index 920779a..89d3c65 100644
--- a/stumpwm/stumpwmrc
+++ b/stumpwm/stumpwmrc
@@ -17,21 +17,21 @@
   (concatenate 'string
                *emacspeak-dir*
                "/"
-               "sounds/pan-chimes/window-resize.wav")
+               "sounds/3d/window-resize.wav")
   "Window change icon.")
 
 (defvar *tts-off-icon*
   (concatenate 'string
                *emacspeak-dir*
                "/"
-               "sounds/pan-chimes/off.wav")
+               "sounds/3d/off.wav")
   "Off icon.")
 
 (defvar *tts-on-icon*
   (concatenate 'string
                *emacspeak-dir*
                "/"
-               "sounds/pan-chimes/on.wav")
+               "sounds/3d/on.wav")
   "On icon.")
 
 ;;; }
